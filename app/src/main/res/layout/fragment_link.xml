<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="286dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0.0dip"
                android:layout_marginTop="5.0dip"
                app:srcCompat="@drawable/linkimage" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="GENERAL INPUT:"
                android:textColor="@android:color/background_dark"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_Distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Input type:"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <RadioGroup
                android:id="@+id/linkRadioGroup"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="3G/LTE Cellular BTS to CPE" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="WiFi Access Point to Laptop (10 Mbps)" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="WiFi Point to Point Link (54 Mbps)" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="Custom" />
            </RadioGroup>

            <TextView
                android:id="@+id/Title_Distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Distance (km):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/Distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords" />

            <TextView
                android:id="@+id/Title_Frequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Frequency (MHz):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/Frequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords" />

            <TextView
                android:id="@+id/title_FadingMargin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fading Margin (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/FadingMargin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_AncillaryGain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ancillary Gain (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/AncillaryGain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOCATION A INPUTS:"
                android:textColor="@android:color/background_dark"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_GainTransmitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location A Gain (dBi):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/GainTransmitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_TxTransmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location A Tx Power (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/TxTransmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_TransmitterRx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location A Rx Sensitivity (dBm): "
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/RxTransmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_ConnectorTransmitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location A Connector Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/ConnectorTransmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/Title_CoaxTransmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location A Coax Cable Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/TransmitCoax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOCATION B INPUTS:"
                android:textColor="@android:color/background_dark"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_RecieverGain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location B Gain (dBi):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/GainReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_TxReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location B Tx Power (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/TxReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_RecieverRx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location B Rx Sensitivity (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/RxReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/title_ConnectorReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location B Connector Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/ConnectorReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/Title_CoaxReciever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location B Coax Cable Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/RecieverCoax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <Button
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Calculate" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="GENERAL OUTPUTS:"
                android:textColor="@android:color/background_dark"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Title_TotalCoax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total Coax Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/TotalCoax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="textPersonName|numberDecimal|phone|textCapWords"
                android:text="0" />

            <TextView
                android:id="@+id/Title_FreeSpaceLoss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Free Space Path Loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/FreeSpaceLoss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/title_FreeSpaceLoss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Minimum antenna A Gain (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/maxToDisplay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/title_maxATitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Maximum permissible coax loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/maxACoax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/title_maxFreeSpace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Maximum permissible free space path loss (dB):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/maxFreeSpaceLoss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/title_aSignal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Estimated received signal at Location A (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/Asignal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/title_bSignal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Estimated received signal at Location B (dBm):"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/Bsignal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0" />

            <TextView
                android:id="@+id/warningLabelLink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="*Link budget represents physical link parameters in an ideal world. It excludes losses due to Freznel encroachment, near and far obstacles, interference, etc. Default parameters and calculations exclude any logical/technology specific parameters, which can be added manually."
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>