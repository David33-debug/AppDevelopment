<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="0.0dip" android:layout_marginTop="0.0dip" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="259dp"
                app:srcCompat="@drawable/fresnelpic" />

            <TextView android:textSize="18.0sp" android:textStyle="bold" android:textColor="@android:color/background_dark" android:id="@+id/title_firstDistance2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="GENERAL INPUTS:" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_ObstacleClearance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Obstacle Clearance:" />
            <RadioGroup android:id="@+id/obstacleRadio" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <RadioButton android:id="@+id/CurvedEarth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Curved Earth" android:layout_weight="1.0" />
                <RadioButton android:id="@+id/FlatEarth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Flat Earth." android:layout_weight="1.0" />
            </RadioGroup>
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_firstDistance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Distance between antennas (km):" />
            <EditText android:id="@+id/totalDistance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_Frequency" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Frequency (MHz):" />
            <EditText android:id="@id/Frequency" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_freznelZone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Freznel Zone:" />
            <EditText android:id="@+id/FreznelZone" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="1" android:ems="10" android:inputType="textPersonName" />
            <Spinner android:id="@+id/spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_heightFirstAntenna" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Height of first antenna (m):" />
            <EditText android:id="@+id/heightFirstAntenna" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_heightSecondAntenna" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Height second antenna (m):" />
            <EditText android:id="@+id/heightSecondAntenna" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <EditText android:id="@+id/saveRadio" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Name" android:ems="10" android:inputType="textPersonName" />
            <TextView android:textSize="18.0sp" android:textStyle="bold" android:textColor="@android:color/background_dark" android:id="@+id/sedrctfvgbh" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="OBSTRUCTION INPUTS:" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_firstObstacleDistance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Distance of first antenna from obstruction (km):" />
            <EditText android:id="@+id/firstObstacleDistance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_obstructionHeight" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Height of obstruction (m):" />
            <EditText android:id="@+id/obstructionHeight" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textStyle="bold" android:textColor="@android:color/background_dark" android:id="@+id/title_firstDistance4" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="OUTPUTS:" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_freznelZoneRadius" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Freznel Zone Radius (m): " />
            <EditText android:id="@+id/freznelRadius" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_lossClearance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Loss clearance relative to obstruction:" />
            <EditText android:id="@+id/LossClearance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <TextView android:textSize="18.0sp" android:textColor="@android:color/background_dark" android:id="@+id/title_RelativeClearance60" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Relative clearance between Freznel Zone and obstruction (60%): " />
            <EditText android:id="@+id/relativeClearance60" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0" android:ems="10" android:inputType="textPersonName|numberDecimal|phone|textCapWords" />
            <Button android:id="@+id/buttonObstacle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="calculate obstacle clearance" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>